{
  "linterOptions": {
      "exclude": [
          "node_modules",
          "src/**/*.spec.ts",
          "src/test.ts",
          "src/testing/*",
          "src/environments/*",
          "src/assets/*",
          "src/config/*",
          "src/polyfills.ts",
          "coverage/*"
      ]
  },
  "rulesDirectory": [
    "node_modules/codelyzer"
  ],
  "rules": {
    "import-blacklist": [true, "lodash", "rxjs/internal"],
    "no-conditional-assignment": true,
    "no-sparse-arrays": true,
    "restrict-plus-operands": true,
    "no-invalid-template-strings": false,
    "no-boolean-literal-compare": true,
    "cyclomatic-complexity": [true, 8],
    "no-import-side-effect": true,
    "no-var-requires": true,
    "prefer-for-of": true,
    "promise-function-async": true,
    "no-parameter-reassignment": true,
    "await-promise": true,
    "new-parens": true,
    "no-any": true,
    "no-duplicate-super": true,
    "no-duplicate-switch-case": true,
    "no-dynamic-delete": true,
    "no-floating-promises": true,
    "no-for-in-array": true,
    "no-invalid-this": false,
    "no-misused-new": true,
    "no-restricted-globals": [true, "length", "event"],
    "no-return-await": true,
    "no-tautology-expression": true,
    "no-this-assignment": true,
    "no-unnecessary-class": [true, "allow-empty-class", "allow-constructor-only"],
    "no-unsafe-finally": true,
    "no-void-expression": true,
    "prefer-object-spread": true,
    "deprecation": true,
    "max-classes-per-file": [true, 1],
    "max-file-line-count": [true, 400],
    "no-default-export": true,
    "no-duplicate-imports": [true, {"allow-namespace-imports": true}],
    "prefer-const": [true, {"destructuring": "all"}],
    "prefer-readonly": [true, "only-inline-lambdas"],
    "arrow-return-shorthand": true,
    "interface-name": [true, "always-prefix"],
    "ordered-imports": [
      true,
      {
        "import-sources-order": "lowercase-last",
        "named-imports-order": "lowercase-first"
      }
    ],
    "linebreak-style": [true, "LF"],
    "no-irregular-whitespace": true,
    "space-within-parens": true,
    "space-before-function-paren": true,
    "callable-types": true,
    "class-name": true,
    "comment-format": [
      true,
      "check-space"
    ],
    "curly": true,
    "eofline": true,
    "forin": true,
    "import-destructuring-spacing": true,
    "import-spacing": true,
    "indent": [
      true,
      "spaces",
      4
    ],
    "interface-over-type-literal": false,
    "label-position": true,
    "max-line-length": [
      true,
      140
    ],
    "member-access": false,
    "member-ordering": [
        true,
        {
          "order": [
            "static-field",
            "instance-field",
            "constructor",
            "public-instance-method",
            "protected-instance-method",
            "private-instance-method"
          ]
        }
      ],
    "no-arg": true,
    "no-bitwise": true,
    "no-consecutive-blank-lines": [true, 1],
    "no-console": [
      true,
      "debug",
      "info",
      "time",
      "timeEnd",
      "trace"
    ],
    "no-construct": true,
    "no-debugger": true,
    "no-duplicate-variable": true,
    "no-empty": false,
    "no-empty-interface": true,
    "no-eval": true,
    "no-shadowed-variable": true,
    "no-string-literal": false,
    "no-string-throw": true,
    "no-switch-case-fall-through": true,
    "no-trailing-whitespace": [true, "ignore-comments"],
    "no-unused-expression": true,
    "no-var-keyword": true,
    "object-literal-sort-keys": false,
    "one-line": [
      true,
      "check-open-brace",
      "check-catch",
      "check-else",
      "check-whitespace"
    ],
    "quotemark": [
      true,
      "single"
    ],
    "radix": true,
    "semicolon": [
      true,
      "always"
    ],
    "triple-equals": [
      true,
      "allow-null-check"
    ],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ],
    "unified-signatures": true,
    "variable-name": false,
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-separator",
      "check-type"
    ],

    "directive-selector": [true, "attribute", "pm", "camelCase"],
    "no-input-rename": true,
    "no-output-rename": true,
    "use-pipe-transform-interface": true,
    "component-class-suffix": true,
    "directive-class-suffix": true,
    "no-access-missing-member": false,
    "component-selector": [true, "element", "pm", "kebab-case"],
    "no-forward-ref": false,
    "pipe-prefix": [true, "camelCase", "pipe"]
  }
}

